<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.habna.dev.lfg.AddGroup"
    tools:showIn="@layout/activity_add_group">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleEditText"
        android:hint="@string/titleHint"
        android:imeOptions="actionDone"
        android:inputType="textCapWords"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descEditText"
        android:hint="@string/descHint"
        android:layout_below="@id/titleEditText"
        android:imeOptions="actionDone"
        android:inputType="textCapSentences"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minParticipantsEditText"
        android:hint="@string/minParticipantsHint"
        android:layout_below="@id/descEditText"
        android:imeOptions="actionDone"
        android:inputType="number"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxParticipantsEditText"
        android:hint="@string/maxParticipantsHint"
        android:layout_below="@id/minParticipantsEditText"
        android:imeOptions="actionDone"
        android:inputType="number"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateEditText"
        android:hint="@string/dateHint"
        android:layout_below="@id/maxParticipantsEditText"
        android:inputType="date"
        android:imeOptions="actionDone"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeEditText"
        android:hint="@string/timeHint"
        android:layout_below="@id/dateEditText"
        android:inputType="time"
        android:imeOptions="actionDone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addGroupButton"
        android:text="@string/addGroupButtonText"
        android:layout_below="@id/timeEditText"/>
</RelativeLayout>
